---
import { t } from '~/i18n'
import { getPreferredLanguage } from '~/utils/language'

const { breadcrumbs } = Astro.props
const pathname = Astro.url.pathname

const acceptLanguage = Astro.request.headers.get('accept-language')
const userLanguage = getPreferredLanguage(acceptLanguage)

function localiseTitle(title: string): string {
  if (!title) return ''
  for (const key of [title.toLowerCase(), title]) {
    const localized = t(userLanguage, `interface:${key}`)
    if (localized !== `interface:${key}`) return localized
  }
  return title
}

const localisedCrumbs = breadcrumbs?.map(c => ({
  ...c,
  title: localiseTitle(c.title),
}))
---

<header>
  <nav aria-label={t(userLanguage, 'header:breadcrumb')}>
    <ul>
      <li>
        <a href="/" aria-label={t(userLanguage, 'interface:home')}
          >ðŸ“š<span class="sr-only">{t(userLanguage, 'interface:home')}</span></a
        >
      </li>{
        localisedCrumbs?.map((b, i, a) => (
          <li aria-current={i === a.length - 1 ? 'page' : undefined}>
            {b.url && i < a.length - 1 ? (
              <a href={b.url}>{b.title}</a>
            ) : (
              <span>{b.title}</span>
            )}
          </li>
        ))
      }
    </ul>
  </nav>
  {
    !pathname.startsWith('/search') && (
      <button
        type="submit"
        popovertarget="search-modal"
        aria-label={t(userLanguage, 'search:search')}
        title={t(userLanguage, 'header:searchShortcut')}
      >
        ðŸ”Ž
      </button>
    )
  }
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    align-items: baseline;
    margin: 1rem;

    ul {
      list-style: none;
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      padding: 0;
      margin: 0;
      scrollbar-width: none;
      &::-webkit-scrollbar {
        display: none;
      }

      li {
        list-style-type: none;
        display: flex;
        word-break: keep-all;
        text-wrap: nowrap;
        white-space: nowrap;

        &:first-of-type a {
          text-decoration: none;
        }

        &::after {
          content: '/';
          margin-left: 0.5rem;
          color: var(--gray);
        }

        &:last-child::after {
          content: '';
        }
      }
    }

    button[popovertarget='search-modal'] {
      cursor: pointer;
      background: none;
      border: none;

      &:focus,
      &:hover {
        background-color: var(--primary-color);
      }
    }
  }
</style>
